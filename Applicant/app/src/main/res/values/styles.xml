    <style name="headTextViewStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="ButtonTopLevelActivityStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_black_24dp</item>
        <item name="queryHint">@null</item>
        <item name="queryBackground">@color/md_white_1000</item>
        <item name="android:queryHint">@string/textHintSearchCity</item>
